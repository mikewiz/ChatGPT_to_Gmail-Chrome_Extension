{
  "name": "ChatGPT + GMail",
  "version": "1.0.2",
  "description": "This is a Google Chrome Extension to connect Gmail with ChatGPT",
  "manifest_version": 3,
  "author": "Michael Flint",
  "options_page": "options.html",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/1/icon16.png",
      "48": "icons/1/icon48.png",
      "128": "icons/1/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*", "https://api.openai.com/*"],
      "js": ["gmail-script.js"]
    },
    {
      "matches": ["https://api.openai.com/*", "https://chat.openai.com/*"],
      "js": ["gpt-script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "notifications"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://api.openai.com/*",
    "https://chat.openai.com/*"
  ],
  "web_accessible_resources": ["popup.js"]
}
